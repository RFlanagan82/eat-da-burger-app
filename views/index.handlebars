<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center app-title">
            <h1>Eat-Da-Burger App</h1>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-12 text-center">
           <p>
            <img src = "./assets/burgerimage.png"
         alt = "burgerimage"/>  
           </p> 
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <h4>Burgers ready to eat!</h4>
            <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devoured=true}}
            {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-sm-2">

        </div>
        <div class="col-sm-5">
            <h4>Devoured Burgers!</h4>
            <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burger-block devoured=false}}
            {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col-sm-12 text-center add-burger">
            <h3>What'll it be for ya?</h3>
            <br>
            <form class="create-form">

            <div class="form-group">
                <label for="bu">Burger Name:</label>
                <input type="text" id="bu" name="burger_name">
            </div>

            <button type="submit">Submit</button>
            <hr>
            <h5>Enter a burger you want to eat by typing it in and clicking "Submit" button."</h5>
            </form>
        </div>
    </div>
    <br>

    <div class="container video">
        <center>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/yNm-QBzPAFc?start=1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" id="video" allowfullscreen></iframe>
        </center>
    </div>
</div> 









