<div class="container">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>Eat-Da-Burger App</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 text-center">
           <p>
            <img src = "./assets/burgerimage.png"
         alt = "burgerimage"/>  
           </p> 
        </div>
    </div>
    <div class="row">
        <div class="col-sm-5">
            <h4>Burgers ready to eat!</h4>
            <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burger-block devoured=true}}
            {{/unless}}
            {{/each}}
            </ul>
        </div>
        <div class="col-sm-2">

        </div>
        <div class="col-sm-5">
            <h4>Burgers that have been eaten!</h4>
            <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/if}}
            {{/each}}
            </ul>
        </div>
    </div>
    
    <div class="row">
        <div class="col-sm-12 text-center">
            <h2>Add a Burger</h2>
            <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name">
            </div>

            <div class="form-group">
                <label for="devoured">Devour?</label><br>
                <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                <input type="radio" name="devoured" value="0"> Devour it!
            </div>

            <button type="submit">Submit</button>
            <h5>Enter a burger you want to eat by typing it in and clicking "Submit" button."</h5>
            </form>
        </div>
    </div>
</div> 









